<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.brookes.bourgein.reversiand"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="android.app.Application"
        android:theme="@style/AppTheme" android:debuggable="true">
        <activity 
            android:name="activity_home"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.ac.brookes.bourgein.reversiand.MainActivity"
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="uk.ac.brookes.bourgein.reversiand.HighscoreActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="uk.ac.brookes.bourgein.reversiand.PrefsActivity"
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="uk.ac.brookes.bourgein.reversiand.CustomPrefs"
            android:screenOrientation="portrait">
        </activity>
       	<provider android:name="HighscoreProvider"    
            android:authorities="uk.ac.brookes.bourgein.highscores"></provider>
    </application>

</manifest>